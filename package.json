{
  "name": "rus-creator",
  "version": "1.0.0",
  "description": "RUS Creator",
  "main": "./out/main/index.js",
  "author": "Hutom",
  "homepage": "https://hutom.io",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "node scripts/postinstall.js",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "pnpm install --force && npm run build && npm run rebuild:win && electron-builder --win",
    "build:win:local": "npm run build && npm run rebuild:win && electron-builder --win",
    "rebuild:win": "node scripts/rebuild-win.js",
    "build:mac": "rm -rf node_modules/ffi-napi node_modules/ref-napi node_modules/ref-struct-napi && electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "build:icon": "scripts/icon-build.sh"
  },
  "build": {
    "productName": "RUS Creator",
    "appId": "io.hutom.rus-creator",
    "asar": true,
    "npmRebuild": false,
    "asarUnpack": [
      "node_modules/ffi-napi/**",
      "node_modules/ref-napi/**",
      "node_modules/ref-struct-napi/**",
      "node_modules/debug/**",
      "node_modules/ms/**"
    ],
    "files": [
      "out",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "executableName": "rus-creator",
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false,
      "installerIcon": "build/hutom_512.ico",
      "createDesktopShortcut": true,
      "artifactName": "rus-creator-${version}.${ext}"
    }
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "ffi-napi": "^4.0.3",
    "ref-napi": "^3.0.3",
    "ref-struct-napi": "^1.1.1",
    "debug": "^4.3.4",
    "ms": "^2.1.3"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@types/node": "^18.19.39",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "electron": "28.2.2",
    "electron-builder": "24.9.1",
    "@electron/rebuild": "3.5.0",
    "electron-vite": "^4.0.1",
    "eslint": "^9.36.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "prettier": "^3.6.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "typescript": "^5.5.4",
    "vite": "^7.1.6"
  },
  "engines": {
    "node": ">=18.0.0 <19.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
